create database studentscore_db32;
use studentscore_db32;
CREATE TABLE StudentScore (
    StudentID VARCHAR(10),
    CourseNo VARCHAR(10),
    CourseName VARCHAR(50),
    Score INT
);
INSERT INTO StudentScore (studentid,courseno,coursename,score)VALUES
('S001', 'C001', 'Statistics', 78),
('S002', 'C001', 'Statistics', 85),
('S003', 'C001', 'Statistics', 90),
('S004', 'C002', 'Programming', 60),
('S005', 'C002', 'Programming', 75),
('S006', 'C002', 'Programming', 80),
('S007', 'C003', 'Mathematics', 88),
('S008', 'C003', 'Mathematics', 92);
SELECT sum(score)
FROM StudentScore
GROUP BY CourseName;


exp 6.8


create database studentscore_db34;
use studentscore_db34;
CREATE TABLE StudentScore (
    StudentID VARCHAR(10),
    CourseNo VARCHAR(10),
    CourseName VARCHAR(50),
    Score INT
);
INSERT INTO StudentScore (studentid,courseno,coursename,score)VALUES
('S001', 'C001', 'Statistics', 78),
('S002', 'C001', 'Statistics', 85),
('S003', 'C001', 'Statistics', 90),
('S004', 'C002', 'Programming', 60),
('S005', 'C002', 'Programming', 75),
('S006', 'C002', 'Programming', 80),
('S007', 'C003', 'Mathematics', 88),
('S008', 'C003', 'Mathematics', 92);
SELECT 
    CourseName,
    COUNT(StudentID)
FROM StudentScore
GROUP BY CourseName;


exp 6.9

create database studentscore_db37;
use studentscore_db37;
CREATE TABLE StudentScore (
    StudentID VARCHAR(10),
    CourseNo VARCHAR(10),
    CourseName VARCHAR(50),
    Score INT
);
INSERT INTO StudentScore (studentid,courseno,coursename,score)VALUES
('S001', 'C001', 'Statistics', 78),
('S002', 'C001', 'Statistics', 85),
('S003', 'C001', 'Statistics', 90),
('S004', 'C002', 'Programming', 60),
('S005', 'C002', 'Programming', 75),
('S006', 'C002', 'Programming', 80),
('S007', 'C003', 'Mathematics', 88),
('S008', 'C003', 'Mathematics', 92);
select studentid,count(coursename)
from studentscore
group by studentid;
